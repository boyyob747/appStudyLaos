<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bounthavong.vithaya.hoctienglao.activity.StudyActivity">
    <RelativeLayout

        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_margin="10dp"
                android:textAlignment="center"
                android:text="lao"
                android:textSize="20sp"
                android:textColor="@color/primary_text"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_vocabulary_karaoke"/>
            <TextView
                android:layout_margin="10dp"
                android:text="lao"
                android:textSize="20sp"
                android:textColor="@color/primary_text"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_vocabulary_lao"/>
            <Button
                android:id="@+id/btn_play_audio"
                android:layout_gravity="center_horizontal"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/ic_play_circle_filled_black_24dp"/>
        </LinearLayout>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_divider">

    </View>
    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_margin="10dp"
            android:text="lao"
            android:textSize="20sp"
            android:textColor="@color/primary_text"
            android:textAlignment="center"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_vocabulary_vn"/>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:visibility="gone"
                android:id="@+id/btn_is_remember"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:textColor="@color/icons"
            android:text="@string/remember"/>
            <Button
                android:visibility="gone"
                android:id="@+id/btn_is_not_remember"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:textColor="@color/icons"
                android:text="@string/not_remember"/>
            <Button
                android:id="@+id/btn_show"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:textColor="@color/icons"
                android:text="@string/show"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
